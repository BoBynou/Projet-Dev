@{
    ViewData["Title"] = "Partenaire";
}

<section class="page-content page-event">
    <div class="title-group">
        <h1>Partenaires</h1>
        <img src="~/img/craime-logo.svg" alt="Logo CRAime">
    </div>

    <button class="add-button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-6 h-6">
            <defs>
                <mask id="plusMask">
                    <rect width="100%" height="100%" fill="white" />
                    <path stroke-width="1.5" d="M12 9v6m3-3H9" fill="black" stroke="black" />
                </mask>
            </defs>
            <circle cx="12" cy="12" r="9" fill="currentColor" mask="url(#plusMask)" />
        </svg>

        <p>ajouter</p>
    </button>

    <table class="event-table">
        <thead>
        <th>Nom</th>
        <th>Type</th>
        <th>Telephone</th>
        <th>Mail</th>
        </thead>
        <tbody id="cecitest">
        </tbody>
    </table>

    <!-- MODAL CREER-->
    <div class="modal" id="createModal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Créer un évènement</h2>
            <form class="event-form">
                <div class="form-group">
                    <label class="form-label" for="name">Nom</label>
                    <input class="form-input" id="name" type="text">
                </div>
                <div class="form-group">
                    <label class="form-label" for="type">type de collaboration</label>
                    <input class="form-input" id="type" type="select" value="--">
                </div>
                <div class="form-group">
                    <label class="form-label" for="email">Email de contact</label>
                    <input class="form-input" id="email" type="email">
                </div>
                <div class="form-group">
                    <label class="form-label" for="phone">Téléphone de contact</label>
                    <input class="form-input" id="phone" type="text">
                </div>
                <div class="form-group form-group-xl">
                    <label class="form-label" for="events">évènement(s) sponsorisé(s)</label>
                    <input class="form-input" id="events" type="select">
                </div>
                <button class="form-input form-button" onclick="addPartenaire()">Créer</button>
            </form>
        </div>
    </div>

    <!-- MODAL MODIFIER-->
    <div class="modal" id="editModal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Créer un évènement</h2>
            <form class="event-form">
                <div class="form-group">
                    <label class="form-label" for="edit-name">Nom</label>
                    <input class="form-input" id="edit-name" type="text">
                </div>
                <div class="form-group">
                    <label class="form-label" for="edit-type">type de collaboration</label>
                    <input class="form-input" id="edit-type" type="select" value="--">
                </div>
                <div class="form-group">
                    <label class="form-label" for="edit-email">Email de contact</label>
                    <input class="form-input" id="edit-email" type="email">
                </div>
                <div class="form-group">
                    <label class="form-label" for="edit-phone">Téléphone de contact</label>
                    <input class="form-input" id="edit-phone" type="text">
                </div>
                <div class="form-group form-group-xl">
                    <label class="form-label" for="edit-events">évènement(s) sponsorisé(s)</label>
                    <input class="form-input" id="edit-events" type="select">
                </div>
                <button class="form-input form-button">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5"
                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125"
                              stroke-linecap="round"
                              stroke-linejoin="round" />
                    </svg>
                    Modifier
                </button>
                <button class="form-input form-button delete-button">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5"
                         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                              stroke-linecap="round"
                              stroke-linejoin="round" />
                    </svg>
                    Supprimer
                </button>
            </form>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/js/dataPartenaire.js" asp-append-version="true"></script>
    <script src="~/js/Modal.js" asp-append-version="true"></script>
}

